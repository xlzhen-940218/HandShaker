<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/titlebar_main" android:background="@drawable/titlebar_background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/title_text_size" android:textStyle="bold" android:textColor="@color/setting_item_text_color" android:id="@+id/title_tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:layout_centerInParent="true"/>
        <TextView android:textSize="@dimen/title_btn_back" android:textStyle="bold" android:textColor="@color/normal_text" android:gravity="center" android:id="@+id/title_btn_back" android:background="@drawable/title_button_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/title_btn_back_min_width" android:text="@string/title_btn_back"/>
        <ImageView android:gravity="center" android:id="@+id/title_btn_settings" android:background="@drawable/button_normal_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ImageView android:layout_below="@+id/titlebar_main" style="@style/titleBarShadowStyle"/>
</RelativeLayout>
