<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wifi_image_background"
        android:paddingBottom="@dimen/wifi_tip_margin_bottom">

        <LinearLayout
            android:id="@+id/wifi_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wifi_image_margin"
            android:layout_marginTop="@dimen/wifi_image_margin_top_bottom"
            android:layout_marginRight="@dimen/wifi_image_margin"
            android:layout_marginBottom="@dimen/wifi_image_margin_top_bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/connect_info_image_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/connect_info_image_connect_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/connect_info_image_mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/connect_info_tip_for_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wifi_image_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/wifi_image_margin"
            android:layout_marginRight="@dimen/wifi_image_margin"
            android:textColor="@color/normal_text"
            android:textSize="@dimen/title_btn_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_item_top"
        android:background="@drawable/selector_setting_sub_item_bg_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/setting_item_text_left"
            android:singleLine="true"
            android:text="@string/wifi_phone_name"
            android:textColor="@color/settings_item_color_bg"
            android:textSize="@dimen/setting_item_text_size" />

        <TextView
            android:id="@+id/wifi_phone_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingRight="@dimen/setting_item_text_padding_right"
            android:singleLine="true"
            android:textColor="@color/settings_item_right_text_color"
            android:textSize="@dimen/setting_item_current_language_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_setting_sub_item_bg_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/setting_item_text_left"
            android:singleLine="true"
            android:text="@string/wifi_ssid"
            android:textColor="@color/settings_item_color_bg"
            android:textSize="@dimen/setting_item_text_size" />

        <TextView
            android:id="@+id/wifi_ssid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingRight="@dimen/setting_item_text_padding_right"
            android:singleLine="true"
            android:textColor="@color/settings_item_right_text_color"
            android:textSize="@dimen/setting_item_current_language_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/connect_info_tip"
        style="@style/SettingItemTipsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wifi_middle_tip" />
</LinearLayout>
