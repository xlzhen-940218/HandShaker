    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/setting_follow_website" android:background="@drawable/selector_setting_sub_item_bg_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/setting_item_text_size" android:textColor="@color/settings_item_color_bg" android:id="@+id/official_website_title" android:paddingLeft="@dimen/setting_item_text_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/follow_website_title" android:layout_centerVertical="true"/>
        <TextView android:textSize="@dimen/setting_item_text_copyright_size" android:textColor="@drawable/settings_item_right_color_bg" android:id="@+id/official_website_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/setting_item_text_right" android:text="@string/follow_website_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
