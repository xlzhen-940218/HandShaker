<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.smartisanos.smartfolder.aoa.view.ConnectInfoView
            android:id="@+id/connectted_connect_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/connection_main_view_top" />

        <TextView
            android:id="@+id/connectted_btn_disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/conntectted_btn_disconnectted_margin_bottom"
            android:background="@drawable/long_red_button_solo"
            android:gravity="center"
            android:text="@string/connectted_btn_disconnectted"
            android:textColor="@android:color/white"
            android:textSize="@dimen/conntectted_btn_disconnectted_text_size" />
    </RelativeLayout>

    <com.smartisanos.smartfolder.aoa.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>
